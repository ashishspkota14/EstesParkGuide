{
  "expo": {
    "name": "Estes Park Guide",
    "slug": "estes-park-guide",
    "version": "1.0.0",
    "scheme": "estesparkguide",
    "newArchEnabled": false,
    "ios": {
      "bundleIdentifier": "com.yourname.estespark",
      "supportsTablet": true,
      "buildNumber": "9",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to take photos of trails.",
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to access your photos.",
        "NSLocationWhenInUseUsageDescription": "This app needs your location to show nearby trails.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs your location for navigation."
      }
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-location",
      "expo-camera",
      "expo-font",
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.0.21",
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "deploymentTarget": "15.1",
            "useFrameworks": "static"
          }
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox"
        }
      ]
    ],
    "android": {
      "package": "com.yourname.estespark",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA"
      ]
    }
  }
}