{
  "expo": {
    "name": "Estes Park Guide",
    "slug": "estes-park-guide",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "estespark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2d5a3f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.estespark"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2d5a3f"
      },
      "package": "com.yourname.estespark",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Estes Park Guide to use your location for trail recommendations."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}